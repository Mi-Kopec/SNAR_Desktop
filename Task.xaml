        <TextBox HorizontalAlignment="Left" x:Name="txtInput" MaxLength="50" Height="23" Margin="220,67,0,0" TextWrapping="Wrap" Text="" TextChanged="TxtInput_TextChanged" VerticalAlignment="Top" Width="120"/>
